@model CustomerRewardModel
@using NetCommunitySolution.Web.Models.Customers;
@using NetCommunitySolution.Web.Models.Rewards;
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@section left
{
    @Html.Action("CustomerNavigation", "Customer", new { selectedTabId = CustomerNavigationEnum.RewardPoints })
}


<div class="reward-page">
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>我的积分</legend>
    </fieldset>
    <div style="padding:15px;margin:15px;">


        <div class="layui-tab">
            <ul class="layui-tab-title">
                <li class="layui-this">我的积分</li>
                <li>积分记录</li>
            </ul>
            <div class="layui-tab-content">
                <div class="layui-tab-item layui-show">
                    <div class="reward-content">
                        <h5 class="reward-value">@Model.Reward</h5>
                        <div class="int">
                            兄弟，现在积分我也不知道有啥用，反正你留着吧！色哥承诺，早晚一天给你兑换积分的方式！
                        </div>
                    </div>
                </div>

                <div class="layui-tab-item">

                    <div class="reward-content">
                        @Html.Partial("_RewardHistoryPaged", Model.Items)
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<script>
//注意：选项卡 依赖 element 模块，否则无法进行功能性操作
layui.use('element', function(){
  var element = layui.element;

    
});
</script>