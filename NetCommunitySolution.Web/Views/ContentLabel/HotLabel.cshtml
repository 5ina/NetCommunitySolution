@model IList<NetCommunitySolution.Web.Models.Catalog.ContentLabelModel>

@{

    var classNames = new string[] { "","layui-bg-orange","layui-bg-green","layui-bg-cyan","layui-bg-blue","layui-bg-black", "layui-bg-gray" };
    Random rd = new Random();
}

<div class="content-labels">
    <div class="content-label-title">
        热门标签
    </div>
    <div class="content-label-body">
        @foreach (var item in Model)
    {
        <span class="layui-badge @classNames[rd.Next(classNames.Length)]">@item.Name</span>
}
    </div>
</div>