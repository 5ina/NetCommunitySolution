@model NetCommunitySolution.Domain.Settings.MediaSetting
@using NetCommunitySolution.Domain.Settings;
@{
    ViewBag.Title = "媒体配置";
    ViewBag.ActiveMenu = "Setting"; //The menu item will be active for this page.
    ViewBag.ActiveItem = "Media-Setting"; //The menu item will be active for this page.
}


@if (!String.IsNullOrEmpty(ViewBag.Result))
{
    <script type="text/javascript">
        layer.open({
            title: '修改配置'
            , content: '媒体配置保存成功'
        });
    </script>
}
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>媒体配置</legend>
</fieldset>
@using (Html.BeginForm("MediaSetting", "Setting", FormMethod.Post, new { @id = "media-setting", @class = "layui-form" }))
{
    @Html.AntiForgeryToken()

    <div class="layui-row">
        <div class="layui-col-md1 layui-col-md-offset11">
            <button class="layui-btn layui-btn-normal">保存</button>
        </div>
    </div>
    <div class="layui-tab">
        <ul class="layui-tab-title">
            <li class="layui-this">基本配置</li>
            <li>存储配置</li>
        </ul>
        <div class="layui-tab-content">
            <div class="layui-tab-item layui-show">
                <div class="layui-form-item">
                </div>
                <div class="layui-form-item">
                    @Html.NETLabelFor(model => model.EnabledAvatar)

                    <div class="layui-input-block">
                        @Html.NETEditorFor(model => model.EnabledAvatar)
                    </div>
                </div>

                <div class="layui-form-item">
                    <div class="layui-inline">
                        @Html.NETLabelFor(model => model.MaxAvatarSize)

                        <div class="layui-input-inline">
                            @Html.NETEditorFor(model => model.MaxAvatarSize)

                        </div>
                        <div class="layui-inline">
                            <div class="layui-form-mid layui-word-aux">文件的最大限制，以kb为单位</div>
                        </div>
                    </div>
                </div>

                <div class="layui-form-item">
                    @Html.NETLabelFor(model => model.MediaMode)

                    <div class="layui-input-block">
                        @Html.DropDownListFor(model => model.MediaMode, MediaMode.Alyun.EnumToDictionary(e => e.GetDescription()))
                    </div>
                </div>

                <div class="layui-form-item">
                    @Html.NETLabelFor(model => model.AvatarFile)

                    <div class="layui-input-block">
                        @Html.NETEditorFor(model => model.AvatarFile)
                    </div>
                </div>
            </div>
            <div class="layui-tab-item">
                <div class="layui-form-item">
                    @Html.NETLabelFor(model => model.AccessKeyId)

                    <div class="layui-input-block">
                        @Html.NETEditorFor(model => model.AccessKeyId)
                    </div>
                </div>
                <div class="layui-form-item">
                    @Html.NETLabelFor(model => model.AccessKeySecret)

                    <div class="layui-input-block">
                        @Html.NETEditorFor(model => model.AccessKeySecret)
                    </div>
                </div>
                <div class="layui-form-item">
                    @Html.NETLabelFor(model => model.Endpoint)

                    <div class="layui-input-block">
                        @Html.NETEditorFor(model => model.Endpoint)
                    </div>
                </div>
                <div class="layui-form-item">
                    @Html.NETLabelFor(model => model.Bucket)

                    <div class="layui-input-block">
                        @Html.NETEditorFor(model => model.Bucket)
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    layui.use('form', function () {
        var form = layui.form;
        //各种基于事件的操作，下面会有进一步介绍
        form.render();
    });
</script>

